! Change cursor
Xcursor.theme:BASEWhite

! Set terminal font and font options
URxvt.font: xft:inconsolata:pixelsize=14
Xft*dpi: 99
Xft*antialias: true
Xft*hinting: full

! Disable scrollbar in terminal, but allow keyboard scrolling
URxvt*scrollBar: false
URxvt*secondaryScroll: true

